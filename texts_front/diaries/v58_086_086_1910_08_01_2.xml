      <div n="v58_n206" type="entry">
        <p id="b1963d3d-f316-42cf-a6cb-b266d12a4c00">
          <span class="opener">
            <span class="dateline">
              <date resp="editor" when="1910-08-01">
                <hi>
                  <span resp="volume_editor" class="add">1 августа. </span>
                </hi>
