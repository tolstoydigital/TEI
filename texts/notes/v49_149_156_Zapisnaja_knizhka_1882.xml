        <gap quantity="1" reason="illegible" unit="word"/>
       </l>
       <l rend="v">
        Законно [?]
        <choice original_editorial_correction="б[ыло]">
         <sic>
          б
         </sic>
         <corr>
          было
         </corr>
        </choice>
        <ref target="#note138">
